{
  // Next.js의 기본 ESLint 설정과 TypeScript, Prettier 설정을 확장
  "extends": [
    "next/core-web-vitals", // Next.js 프레임워크에 최적화된 성능 권장사항과 웹 성능 지표 관련 규칙 적용
    "plugin:@typescript-eslint/recommended", // TypeScript 공식 권장 규칙 적용
    "plugin:prettier/recommended" // 코드 스타일은 Prettier에 위임하고, ESLint는 코드 품질에 집중하게 할 수 있도록
  ],
  // 사용할 ESLint 플러그인들
  "plugins": [
    "@typescript-eslint", // TypeScript 문법 검사
    "prettier" // Prettier 포맷팅 규칙
  ],
  // ESLint에서 TypeScript 파일 파싱(해석)을 위한 파서 설정
  "parser": "@typescript-eslint/parser",
  "rules": {
    // var 사용 금지 (let, const 사용 권장)
    "no-var": "warn",
    // 여러 줄의 빈 줄 금지
    "no-multiple-empty-lines": "warn",
    // ==, != 대신 ===, !== 사용 권장
    "eqeqeq": "warn",
    // 객체 속성 접근 시 대괄호([]) 대신 점(.) 표기법 권장
    "dot-notation": "warn",
    // 선언해놓고 사용하지 않는 변수엔 경고
    "no-unused-vars": "warn",
    // 자식 요소가 없는 React 컴포넌트는 self-closing 태그 사용 권장
    // cf. self-closing이란? <div></div> 말고, <div /> 와 같은 형태를 의미함.
    "react/self-closing-comp": "warn",
    // 배열 렌더링 시 key prop 필수 사용
    "react/jsx-key": "warn",
    // React 컴포넌트 이름은 PascalCase 사용
    "react/jsx-pascal-case": "warn",
    // JSX에서 불필요한 중괄호는 사용 금지
    "react/jsx-curly-brace-presence": "warn",
    // 불필요한 Fragment 사용 금지
    "react/jsx-no-useless-fragment": "warn",
    // props와 state는 구조 분해 할당 사용 권장
    "react/destructuring-assignment": "warn",
    // 사용하지 않는 state 경고 -> 불필요한 리렌더링 방지
    "react/no-unused-state": "warn",
    // 단방향 흐름을 유지하기 위해 state 직접 수정 금지 (setState 사용 권장)
    "react/no-direct-mutation-state": "warn",
    // Prettier 포맷팅 규칙
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto" // 각자 OS에 맞는 줄바꿈 문자 사용
      }
    ]
  }
}
